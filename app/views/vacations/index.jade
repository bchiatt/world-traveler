extends ../shared/template
block content
  .row
    .col-xs-12
      #map
  .row
    .col-xs-12
      table.table.table-hover
        thead
          tr
            th Name
            th Start
            th End
            th Latitude
            th Longitude
        tbody
          each vacation in vacations
            tr
              td= vacation.name
              td= moment(vacation.start).format('DD MMM YYYY')
              td= moment(vacation.end).format('DD MMM YYYY')
              td= vacation.lat.toFixed(4)
              td= vacation.lng.toFixed(4)

block scripts
  script(src='/js/user/vacations.js')

